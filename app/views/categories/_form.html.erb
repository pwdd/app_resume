<%= form_for(@category, html: {class: "form-horizontal"}) do |f| %>
	<ul>
		<% @category.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>
	<div class="form-group">
		<%= f.label :name, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_area :description, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :inheritance, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :inheritance, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :attr, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :attr, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :attr_name, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :attr_name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-3 col-md-9">
			<%= f.submit "Submit", class: "btn btn-primary" %>	
		</div>
	</div>
<% end %>