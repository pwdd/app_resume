<h2 class="text-center m30">all categories</h2>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= link_to "new category", new_category_path, class: "btn btn-default mt30" %>		
		<ul class="list-unstyled index">
			<% @categories.each do |category| %>
			<li>
				<span class="glyphicon glyphicon-menu-right white"></span>
				ID: <%= category.id %> | <%= link_to category.name, category_path(category) %>
			</li>
			<% end %>
		</ul>
	</div>
</div>