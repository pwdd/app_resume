<%= form_for(@course, html: {class: "form-horizontal"}) do |f| %>
	<ul>
		<% @course.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>
	<div class="form-group">
		<%= f.label :name, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :where, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :where, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :university, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :university, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :status, class: "col-md-3 control-label" %>
		<div class="col-md-9">
			<%= f.text_field :status, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-3 col-md-9">
			<%= f.submit "Submit", class: "btn btn-primary" %>	
		</div>
	</div>
<% end %>