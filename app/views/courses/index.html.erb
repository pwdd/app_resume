<h2 class="text-center m30">all courses</h2>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<ul class="list-unstyled index">
			<% @courses.each do |course| %>
			<li>
				<span class="glyphicon glyphicon-menu-right white"></span>
				ID: <%= course.id %> | <%= link_to course.name, course_path(course) %>
			</li>
			<% end %>
		</ul>

		<%= link_to "new course", new_course_path, class: "btn btn-default mt30" %>		
	</div>
</div>