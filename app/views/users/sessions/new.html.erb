<h1 class="text-center white m30">Log in</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-md-3 control-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control form-smaller" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-md-3 control-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control form-smaller" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <div class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "white" %>
            </div>        
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9 btn-login">
          <div class="btn-group">
            <%= f.submit "Log in", class: "btn btn-success" %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-default" %>
            <% end -%>          
          </div>
        </div>
      </div>
    <% end %>
 
  </div>
</div>